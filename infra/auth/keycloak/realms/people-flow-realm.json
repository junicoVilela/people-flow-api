        { "name": "colaborador:ler", "description": "Visualizar colaboradores" },
        { "name": "colaborador:atualizar", "description": "Atualizar colaboradores" },
        { "name": "colaborador:demitir", "description": "Demitir colaboradores" }
      ]
    }
  },
